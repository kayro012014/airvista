@{
    ViewData["Title"] = "Create Flight";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-uppercase fw-bold mb-4" style="color: #08385b;">Add Flight Details</h2>

        <form>
            <div class="row mb-3">
                <!-- Departure Date & Time -->
                <div class="col-md-6">
                    <label for="departureDate" class="form-label fw-bold">Departure</label>
                    <input type="date" class="form-control" id="departureDate" required>
                </div>
                <div class="col-md-6">
                    <label for="departureTime" class="form-label fw-bold">&nbsp;</label>
                    <input type="time" class="form-control" id="departureTime" required>
                </div>
            </div>

            <div class="row mb-3">
                <!-- Arrival Date & Time -->
                <div class="col-md-6">
                    <label for="arrivalDate" class="form-label fw-bold">Arrival</label>
                    <input type="date" class="form-control" id="arrivalDate" required>
                </div>
                <div class="col-md-6">
                    <label for="arrivalTime" class="form-label fw-bold">&nbsp;</label>
                    <input type="time" class="form-control" id="arrivalTime" required>
                </div>
            </div>

            <div class="row mb-3">
                <!-- From & To Dropdowns -->
                <div class="col-md-6">
                    <label for="fromLocation" class="form-label fw-bold">From</label>
                    <select class="form-select" id="fromLocation" required>
                        <option selected disabled>Choose departure location</option>
                        <option value="NYC">New York (NYC)</option>
                        <option value="LAX">Los Angeles (LAX)</option>
                        <option value="LON">London (LON)</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label for="toLocation" class="form-label fw-bold">To</label>
                    <select class="form-select" id="toLocation" required>
                        <option selected disabled>Choose arrival location</option>
                        <option value="NYC">New York (NYC)</option>
                        <option value="LAX">Los Angeles (LAX)</option>
                        <option value="LON">London (LON)</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <!-- Duration & Price -->
                <div class="col-md-6">
                    <label for="duration" class="form-label fw-bold">Duration</label>
                    <input type="text" class="form-control" id="duration" placeholder="e.g., 5h 30m" required>
                </div>
                <div class="col-md-6">
                    <label for="price" class="form-label fw-bold">Price</label>
                    <input type="number" class="form-control" id="price" placeholder="Enter price" required>
                </div>
            </div>

            <div class="mb-4">
                <!-- Airline Selection -->
                <label for="airline" class="form-label fw-bold">Select Airline</label>
                <select class="form-select" id="airline" required>
                    <option selected disabled>Choose an airline</option>
                    <option value="AA">American Airlines</option>
                    <option value="DL">Delta Airlines</option>
                    <option value="UA">United Airlines</option>
                </select>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-lg text-white fw-bold px-5" style="background-color: #008f39;">
                    <i class="fas fa-check-circle me-2"></i> Proceed
                </button>
            </div>
        </form>
    </div>
</div>

