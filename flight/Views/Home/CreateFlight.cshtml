@model flight.Models.Flight

@{
    ViewData["Title"] = "Create Flight";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-uppercase fw-bold mb-4" style="color: #08385b;">Add Flight Details</h2>

        <form asp-action="Create" asp-controller="Flight" method="post">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="DepartureDate" class="form-label fw-bold">Departure</label>
                    <input asp-for="DepartureDate" type="date" class="form-control" required>
                    <span asp-validation-for="DepartureDate" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="DepartureTime" class="form-label fw-bold">&nbsp;</label>
                    <input asp-for="DepartureTime" type="time" class="form-control" required>
                    <span asp-validation-for="DepartureTime" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="ArrivalDate" class="form-label fw-bold">Arrival</label>
                    <input asp-for="ArrivalDate" type="date" class="form-control" required>
                    <span asp-validation-for="ArrivalDate" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="ArrivalTime" class="form-label fw-bold">&nbsp;</label>
                    <input asp-for="ArrivalTime" type="time" class="form-control" required>
                    <span asp-validation-for="ArrivalTime" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="FromLocation" class="form-label fw-bold">From</label>
                    <select asp-for="FromLocation" class="form-select" required>
                        <option selected disabled>Choose departure location</option>
                        <option value="NYC">New York (NYC)</option>
                        <option value="LAX">Los Angeles (LAX)</option>
                        <option value="LON">London (LON)</option>
                    </select>
                    <span asp-validation-for="FromLocation" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="ToLocation" class="form-label fw-bold">To</label>
                    <select asp-for="ToLocation" class="form-select" required>
                        <option selected disabled>Choose arrival location</option>
                        <option value="NYC">New York (NYC)</option>
                        <option value="LAX">Los Angeles (LAX)</option>
                        <option value="LON">London (LON)</option>
                    </select>
                    <span asp-validation-for="ToLocation" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Duration" class="form-label fw-bold">Duration</label>
                    <input asp-for="Duration" type="text" class="form-control" placeholder="e.g., 5h 30m" required>
                    <span asp-validation-for="Duration" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Price" class="form-label fw-bold">Price</label>
                    <input asp-for="Price" type="number" class="form-control" placeholder="Enter price" required>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-4">
                <label asp-for="Airline" class="form-label fw-bold">Select Airline</label>
                <select asp-for="Airline" class="form-select" required>
                    <option selected disabled>Choose an airline</option>
                    <option value="AA">American Airlines</option>
                    <option value="DL">Delta Airlines</option>
                    <option value="UA">United Airlines</option>
                </select>
                <span asp-validation-for="Airline" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-lg text-white fw-bold px-5" style="background-color: #008f39;">
                    <i class="fas fa-check-circle me-2"></i> Proceed
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
